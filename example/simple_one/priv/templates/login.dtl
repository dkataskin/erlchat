<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Login</title>

        <link rel="stylesheet" type="text/css" href="/css/maxmertkit.css" />

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <script src="/js/jquery.json.js"></script>
        <script src="/js/maxmertkit.js"></script>
    </head>
    <body>
        <div id="users">
            {% for user in users %}
            <div class="-row">
                <div class="-col6 -offset5">
                    <a href="/user/{{ user.2 }}/chat" class="-avatar _round_ _bordered_">
                        <figure class="-thumbnail">
                            <img src="{{ user.4 }}" alt="{{ user.3 }}">
                        </figure>
                    </a> {{ user.3 }}
                </div>
            </div>
            {% endfor %}
        </div>
    </body>

    <script type="text/javascript">
        $(document).ready(function(){
            $("#users").find(".-avatar")
                        .hover(function(){
                $(this).toggleClass("-primary-");
            })
        });
    </script>
</html>